<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="113dp" />

    <LinearLayout
        android:id="@+id/weatherInformation"
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cityNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sample City"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="11dp" />

                <TextView
                    android:id="@+id/temperatureText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="17.73Â°C"
                    android:textSize="30dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/weatherConditionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="overcast clouds"
                    android:textSize="15dp" />
            </LinearLayout>

            <Space
                android:layout_width="27dp"
                android:layout_height="93dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="114dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <Space
                android:layout_width="37dp"
                android:layout_height="93dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/sunriseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sunrise: 5:25" />

        <TextView
            android:id="@+id/sunsetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sunset: 20:25" />

    </LinearLayout>

    <EditText
        android:id="@+id/cityInput"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Enter a city."
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/getWeatherBtn"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="see weather"
        />


</LinearLayout>